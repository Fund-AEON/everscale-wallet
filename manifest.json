{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "baTON",
  "homepage_url": "https://baton.io",
  "description": "FreeTON browser extension and wallet",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "48": "icons/48.png",
    "64": "icons/128.png",
    "128": "icons/128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "notifications",
    "unlimitedStorage"
  ],
  "content_security_policy": "script-src 'self' 'wasm-eval' ; object-src 'self'",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "baTON",
    "default_icon": {}
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "browser-polyfill.js",
        "injector.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "externally_connectable" : {
    "matches": [
      "file://*/*",
      "http://*/*",
      "https://*/*"
    ]
  },
  "web_accessible_resources": [
    "browser-polyfill.js",
    "ton-client/main.js",
    "ton-client/tonclient.wasm",
    "freetonProvider.js",
    "modules/*"
  ]
}